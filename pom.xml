<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>slash.navigation</groupId>
    <artifactId>RouteConverter</artifactId>
    <version>2.14-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>RouteConverter</name>
    <url>http://www.routeconverter.com</url>

    <developers>
        <developer>
            <id>cpesch</id>
            <name>Christian Pesch</name>
            <email>support at routeconverter dot com</email>
            <timezone>+1</timezone>
        </developer>
    </developers>

    <repositories>
        <repository>
            <id>routeconverter-thirdparty</id>
            <url>http://www.routeconverter.com/svn/RouteThirdParty</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>routeconverter-thirdparty</id>
            <url>http://www.routeconverter.com/svn/RouteThirdParty</url>
        </pluginRepository>
    </pluginRepositories>

    <distributionManagement>
        <repository>
            <id>routeconverter-release</id>
            <name>RouteConverter Release Repository</name>
            <url>scpexe://www.routeconverter.com:/home/notroot/public_html/routeconverter.com/static/downloads/release</url>
        </repository>
        <snapshotRepository>
            <id>routeconverter-prerelease</id>
            <name>RouteConverter Prerelease Snapshot Repository</name>
            <url>scpexe://www.routeconverter.com:/home/notroot/public_html/routeconverter.com/static/downloads/prerelease</url>
        </snapshotRepository>
    </distributionManagement>

    <scm>
        <connection>scm:git:https://github.com/cpesch/RouteConverter</connection>
        <developerConnection>scm:git:git@github.com:cpesch/RouteConverter.git</developerConnection>
        <tag>HEAD</tag>
    </scm>

    <properties>
        <targetJdk>1.7</targetJdk>
    </properties>

    <build>
        <extensions>
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-ssh-external</artifactId>
                <version>2.4</version>
            </extension>
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-scm</artifactId>
                <version>2.4</version>
            </extension>
            <extension>
                <groupId>org.apache.maven.scm</groupId>
                <artifactId>maven-scm-manager-plexus</artifactId>
                <version>1.8.1</version>
            </extension>
            <extension>
                <groupId>org.apache.maven.scm</groupId>
                <artifactId>maven-scm-provider-gitexe</artifactId>
                <version>1.8.1</version>
            </extension>
        </extensions>

        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <version>2.4</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>3.1</version>
                    <configuration>
                        <source>${targetJdk}</source>
                        <target>${targetJdk}</target>
                        <encoding>Cp1252</encoding>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-javadoc-plugin</artifactId>
                    <version>2.9.1</version>
                    <configuration>
                        <doctitle>RouteConverter ${project.version} API</doctitle>
                        <windowtitle>RouteConverter ${project.version} API</windowtitle>
                        <encoding>Cp1252</encoding>
                        <header>RouteConverter API</header>
                        <bottom>Created by Christian Pesch</bottom>
                        <detectLinks>true</detectLinks>
                        <excludePackageNames>
                            slash.common.helpers*:slash.navigation.jnlp*:slash.navigation.catalog*:slash.navigation.completer*:slash.navigation.converter*:slash.navigation.earthtools*:slash.navigation.feedback*:slash.navigation.geonames*:slash.navigation.googlemaps*:slash.navigation.gpx.*:slash.navigation.gui*:slash.navigation.hgt*:slash.navigation.rest*:*binding*
                        </excludePackageNames>
                        <groups>
                            <group>
                                <title>Base</title>
                                <packages>slash.navigation.base</packages>
                            </group>
                            <group>
                                <title>Formats</title>
                                <packages>
                                    slash.navigation.babel:slash.navigation.bcr:slash.navigation.copilot:slash.navigation.fpl:slash.navigation.gopal:slash.navigation.gpx:slash.navigation.itn:slash.navigation.klicktel:slash.navigation.kml:slash.navigation.lmx:slash.navigation.mm:slash.navigation.nmea:slash.navigation.nmn:slash.navigation.ovl:slash.navigation.simple:slash.navigation.tcx:slash.navigation.tour:slash.navigation.url:slash.navigation.viamichelin:slash.navigation.wbt:slash.navigation.zip
                                </packages>
                            </group>
                            <group>
                                <title>Utilities</title>
                                <packages>
                                    slash.common.io:slash.common.hex:slash.common.log:slash.common.util:slash.navigation.util
                                </packages>
                            </group>
                        </groups>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-jar-plugin</artifactId>
                    <version>2.4</version>
                    <configuration>
                        <archive>
                            <addMavenDescriptor>false</addMavenDescriptor>
                        </archive>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-release-plugin</artifactId>
                    <version>2.4.2</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-resources-plugin</artifactId>
                    <version>2.6</version>
                    <configuration>
                        <encoding>Cp1252</encoding>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-shade-plugin</artifactId>
                    <version>1.7.1</version>
                </plugin>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>buildnumber-maven-plugin</artifactId>
                    <version>1.2</version>
                </plugin>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>build-helper-maven-plugin</artifactId>
                    <version>1.8</version>
                </plugin>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>native2ascii-maven-plugin</artifactId>
                    <version>1.0-beta-1</version>
                </plugin>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>webstart-maven-plugin</artifactId>
                    <version>1.0-beta-3</version>
                </plugin>
                <plugin>
                    <groupId>org.bluestemsoftware.open.maven.plugin</groupId>
                    <artifactId>launch4j-plugin</artifactId>
                    <version>1.5.0.0</version>
                </plugin>
                <plugin>
                    <groupId>com.vineetmanohar</groupId>
                    <artifactId>maven-twitter-plugin</artifactId>
                    <version>0.1</version>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.11</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
            <version>1.9.5</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>commons-codec</groupId>
                <artifactId>commons-codec</artifactId>
                <version>1.9</version>
                <classifier>stripped</classifier>
            </dependency>
            <dependency>
                <groupId>commons-logging</groupId>
                <artifactId>commons-logging</artifactId>
                <version>1.1.3</version>
                <classifier>stripped</classifier>
            </dependency>
            <dependency>
                <groupId>javax.help</groupId>
                <artifactId>javahelp</artifactId>
                <version>2.0.05</version>
                <classifier>stripped</classifier>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <modules>
        <module>catalog</module>
        <module>common</module>
        <module>common-gui</module>
        <module>common-navigation</module>
        <module>datasource</module>
        <module>download</module>
        <module>download-tools</module>
        <module>earthtools</module>
        <module>elevation-service</module>
        <module>feedback</module>
        <module>geonames</module>
        <module>googlemaps</module>
        <module>gpx</module>
        <module>hgt</module>
        <module>jnlp</module>
        <module>kml</module>
        <module>mapview</module>
        <module>navigation-formats</module>
        <module>profileview</module>
        <module>rest</module>
        <module>routing-service</module>
        <module>swt-mapview</module>
        <module>route-converter</module>
        <module>route-converter-cmdline</module>
        <module>route-converter-build</module>
        <module>route-converter-license</module>
        <module>RouteConverterBase</module>
        <module>RouteConverterCmdLine</module>
        <module>RouteConverterLinux</module>
        <module>RouteConverterLinux64</module>
        <module>RouteConverterMac</module>
        <module>RouteConverterMac64</module>
        <module>RouteConverterWindows</module>
        <module>RouteConverterWindows64</module>
        <module>RouteConverterWebstart</module>
    </modules>
</project>
